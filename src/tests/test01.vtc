varnishtest "Test backendhealth vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import backendhealth from "${vmod_topbuild}/src/.libs/libvmod_backendhealth.so";

	sub vcl_deliver {
		set resp.http.hello = backendhealth.json();
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello == "Hello, World"
}

client c1 -run
